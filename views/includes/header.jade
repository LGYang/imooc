.container
    .row 
        nav(class="nav nav-tabs")
            li(class="nav-item")
                if title.match('首页')
                    a(class="nav-link active" href="/") 首页
                else 
                    a(class="nav-link" href="/") 首页
            li(class="nav-item")
                if title.match('列表页')
                    a(class="nav-link active" href="/admin/list") 列表页
                else 
                    a(class="nav-link" href="/admin/list") 列表页
            li(class="nav-item")
                if title.match('录入页')
                    a(class="nav-link active" href="/admin/movie") 录入页
                else 
                    a(class="nav-link" href="/admin/movie") 录入页
.navbar.navbar-default.navbar-fixed-bottom
    .container
        .navbar-header
            a.navbar-brand(href="/") 重度科幻迷
        if user 
         p.navbar-text.navbar-right
            span 欢迎你，${user.name}
            span &nbsp; | &nbsp;
            a.nav-link(href="logout") 登出
        else 
        p.navbar-text.navbar-right 
            a.nav-link(href="#", data-toggle="modal", data-target="signupModal") 注册
            span &nbsp; | &nbsp;
            a.nav-link(href="#", data-toggle="modal", data-target="signinModal") 登录
#signupModal.modal.fade
.modal-dialog
    .modal-content 
        form(method="POST", action="/user/signup")
            .modal-header 注册
            .modal-body
                .form-group
                    label(for="signinName") 用户名 
                    inpu#signinName.form-control(name="user[name]", type="text")
                .form-group
                    label(for="signinPassword") 密码 
                    inpu#signinPassword.form-control(name="user[password]", type="text")
            .modal-footer
                button.btn.btn-default(type="button", data-dismiss="modal") 关闭
                button.btn.btn-success(type="submit") 提交

