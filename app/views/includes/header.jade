.container
    .row 
        nav(class="nav nav-tabs")
            li(class="nav-item")
                if title.match('首页')
                    a(class="nav-link active" href="/") 首页
                else 
                    a(class="nav-link" href="/") 首页
            li(class="nav-item")
                if title.match('列表页')
                    a(class="nav-link active" href="/admin/list") 列表页
                else 
                    a(class="nav-link" href="/admin/list") 列表页
            li(class="nav-item")
                if title.match('录入页')
                    a(class="nav-link active" href="/admin/movie") 录入页
                else 
                    a(class="nav-link" href="/admin/movie") 录入页
            li(class="nav-item")
                a(class="nav-link" href="/admin/userlist") 用户列表页
            li(class="nav-item")
                a(class="nav-link" href="/admin/category/list") 电影分类页
            li(class="nav-item")
                a(class="nav-link" href="/admin/category/new") 添加分类
    .row
        form(method="get", action="/result")
            .input-group.pull-left
                input.form-control(type="text", name="q")
                span.input-group-btn
                    button.btn.btn-default(type="submit") 搜索
.navbar.navbar-default.navbar-fixed-bottom
    .container
        if user 
            p.navbar-text.navbar-right
                span 欢迎你，#{user.name}
                span &nbsp; | &nbsp;
                a(href="logout") 登出
        else 
            p.navbar-text.navbar-right 
                a(href="javascript:void(0)", data-toggle="modal", data-target="#signupModal") 注册
                span &nbsp; | &nbsp;
                a(href="javascript:void(0)", data-toggle="modal", data-target="#signinModal") 登录
#signupModal.modal.fade
    .modal-dialog
        .modal-content 
            form(method="POST", action="/user/signup")
                .modal-header 注册
                .modal-body
                    .form-group
                        label(for="signinName") 用户名 
                        input#signinName.form-control(style="{height: 30px}" name="user[name]", type="text")
                    .form-group
                        label(for="signinPassword") 密码 
                        input#signinPassword.form-control(style="{height: 30px}" name="user[password]", type="text")
                .modal-footer
                    button.btn.btn-default(type="button", data-dismiss="modal") 关闭
                    button.btn.btn-success(type="submit") 提交
#signinModal.modal.fade
    .modal-dialog
        .modal-content 
            form(method="POST", action="/user/signin")
                .modal-header 登录
                .modal-body
                    .form-group
                        label(for="signinName") 用户名 
                        input#signinName.form-control(style="{height: 30px}" name="user[name]", type="text")
                    .form-group
                        label(for="signinPassword") 密码 
                        input#signinPassword.form-control(style="{height: 30px}" name="user[password]", type="text")
                .modal-footer
                    button.btn.btn-default(type="button", data-dismiss="modal") 关闭
                    button.btn.btn-success(type="submit") 提交

